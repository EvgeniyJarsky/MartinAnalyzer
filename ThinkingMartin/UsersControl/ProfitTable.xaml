            <Label x:Name="profitTable_Average" HorizontalAlignment="Center" FontWeight="Bold" VerticalAlignment="Center" Margin="2,0,2,0">Средняя</Label>
        </Border>
        <Border Background="#FF8DB4E2" BorderThickness="1,1,0,1" BorderBrush="Black" Grid.Row="0" Grid.Column="14" Grid.RowSpan="2">
            <Label x:Name="profitTable_Total" HorizontalAlignment="Center" FontWeight="Bold" VerticalAlignment="Center" Margin="2,0,2,0">Итого</Label>
        </Border>

        <Border BorderBrush="Black" BorderThickness="1,1,0,0" Grid.Column="0" Grid.Row="2">
            <ItemsControl x:Name="year_">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Background="#FFD9D9D9" Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="1,1,0,1">
                            <Label HorizontalAlignment="Center" Content="{Binding YearVal}"></Label>
                        </Border>
