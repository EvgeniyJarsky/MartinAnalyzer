<UserControl x:Class="WPF_NET6.UsersControl.TopButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_NET6.UsersControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal">
            <Button Click="Btn_LoadFile" Margin="10" Content="Load" MaxWidth = "100" MaxHeight = "40" Width="50" />
            <Button Click="DeleteItem" Margin="10" Content="Delete" MaxWidth = "100" MaxHeight = "40" Width="50" />
            <Button Click="DeleteAll" Margin="10" Content="DeleteAll" MaxWidth = "100" MaxHeight = "40" Width="50" />
        </StackPanel>
    </Grid>
</UserControl>
